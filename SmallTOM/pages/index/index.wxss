/**index.wxss**/
.banner{
  width: 100%;
  height:100%;
  border-radius: 20%;
  
}
.banner_border{
  border-bottom: 3px solid #cecdcb;
  
}

.content{
  width: 100%;
  height: 100px;
  flex-direction: row;
  background-color:  #011627;
  border-bottom: 1px solid #dfe2e2;
  display: flex;
}

.content_hover{
  background-color:  #ffffff
}

.pic_box{
  width: 40%;
  height: 100px;
  background-color: #000000;
}

.pic_box image{
  width: 100%;
  height: 100%;
  border-radius: 30% 30%;

}

.content_box{
  width: 60%;
  height: 100px;
  background-color: #1ae200;
  border-left: 30px solid #0af30af3;
  border-right: 30px solid #0af30af3;
  box-shadow: 3px 2px 10px 10px #00ff00;
  text-align: center;
  border-radius: 2% 70%

}

.title{
  height: 10px;
  font-size: 12px;
  color: #fbff00;
  font-weight: bold;

}

.description{
  font-weight: bold;
  font-size: 12px;
  color: #fbff00;
}
